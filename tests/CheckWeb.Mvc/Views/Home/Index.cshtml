<img id="vcode" src="/vcode/getgeneralverificationcode?flags=1&length=6" alt="Verification Code" />
<script>
    (function(window, undefined) {
        var flags = [1, 2, 3, 4, 5, 8, 9, 16];
        var random = ~~(Math.random() * 8);
        var elem = document.getElementById("vcode");
        elem.onclick = function changeVcode() {
            elem.src = "/vcode/getgeneralverificationcode?flags=" + flags[random] + "&length=6&_=" + +new Date();
        };
    })(window);
</script>
