
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form role="form">
    <div class="form-group">
        <label for="name">邮箱地址</label>
        <input type="email" class="form-control" id="name" name="to" placeholder="请输入邮箱地址" required>
    </div>
    <button type="submit" class="btn btn-default">发送</button>
</form>
@section Scripts
{
    <script>
        $(function() {
            $('form').submit(function(e) {
                e.preventDefault();
                $.post('/api/message', $(this).serialize()).success(function() {
                    alert("邮件发送成功！");
                });
            });
        });
    </script>
}

